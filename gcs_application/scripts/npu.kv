<Container>:
    orientation: 'vertical'
    
    butt_set_waypoint: set_waypoint
    butt_send: send
    butt_clear: clear
    map_layer: map
    butt_bar: butt_bar
    paint_layer: paint_layer
    lable: lable

    MapView:
        id: map
        lat: 47.201738
        lon: 38.934003
        zoom: 15
        
        Widget: 
            id: paint_layer
            size: (self.width, self.height)


    BoxLayout:
        id: butt_bar
        # orientation: 'vertical'
        size_hint: (1, 0.1)

        Button:
            id: set_waypoint
            text: 'Set WayPoint'
            size: (100, 50)
            pos: (0, 0)
            on_release: 
                root.set_waypoint_cb()

        Button:
            id: send
            text: 'Send Mission'
            size: (100, 50)
            pos: (100, 0)
            on_release: 
                root.send_cb()

        Button:
            id: clear
            text: 'Clear'
            size: (100, 50)
            pos: (200, 0)
            on_release: 
                root.clear_cb()

        Label:
            id: lable
            text: "lat: \nlon:"
            text_size: (200, 50)
            halign: "left"